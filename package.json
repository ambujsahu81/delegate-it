{
  "name": "delegate-it",
  "version": "2.0.0",
  "description": "Lightweight event delegation",
  "keywords": [
    "delegate",
    "delegation",
    "event"
  ],
  "repository": "fregante/delegate-it",
  "license": "MIT",
  "type": "module",
  "main": "index.js",
  "module": "index.js",
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "build": "tsc",
    "prepack": "tsc --sourceMap false",
    "test": "tsc && xo && ava",
    "watch": "run-p --silent watch:*",
    "watch:build": "tsc --watch",
    "watch:test": "ava --watch"
  },
  "xo": {
    "envs": [
      "browser"
    ],
    "rules": {
      "prefer-rest-params": 0,
      "import/extensions": 0,
      "unicorn/import-index": 0,
      "import/no-useless-path-segments": 0
    }
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^0.7.0",
    "ava": "^3.12.1",
    "jsdom": "^16.4.0",
    "npm-run-all": "^4.1.5",
    "sinon": "^9.0.3",
    "typescript": "^4.0.2",
    "xo": "^0.33.1"
  }
}
